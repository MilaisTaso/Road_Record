<div class="row">
  <div class="col-12 mx-auto">
    <div class="col-10 rounded" id="user-title">
      <h1 class="text-white py-1 text-center">My Page</h1>
    </div>
    <div class="row mt-4">
      <div class="col-12">
        <%= render 'layouts/error', obj:@user %>
      </div>
      <div class="mr-2 mb-2" id="icon-area">
        <%= image_tag @user.user_image.variant(gravity: "Center", resize: "90x90!", crop: "90x90+0+0").processed,
        class:"user-icon", id:"default-icon" %>
      </div>
      <div id="profile_area" class="col-11 col-md-8 col-lg-8">
        <%= render 'public/users/info', user:@user %>
      </div>
      <div class="d-flex flex-column justify-content-end">
      <% if @user == current_user %>
        <% if !current_user.guest_match? %>
          <div class="mt-2" id="user-btn">
            <%= render 'public/users/button', user: @user %>
          </div>
          <div class="mt-2">
            <%= link_to  "退会する", withdrawal_path, method: :patch,
            class:"btn btn-danger btn-sm", "data-confirm" => "本当に退会しますか?" %>
          </div>
        <% end %>
      <% else %>
        <div id="relationships_btn">
          <%= render 'public/relationships/button', user:@user %>
        </div>
    <% end %>
    </div>
    </div>
    <div class="bg-white mt-5 border col-12">
      <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
          <a class="nav-link nav-tag active text-secondary" href="#" data-id="course">投稿したコース</a>
        <li class="nav-item">
          <a class="nav-link nav-tag text-secondary" href="#" data-id="followed">
          フォロー</a>
        <li class="nav-item">
          <a class="nav-link nav-tag text-secondary" href="#" data-id="follower">
          フォロワー</a>
        </li>
      </ul>
    </div>
    <div class="bg-light border-bottom rounded-bottom border-left border-right">
      <section class="content active bg-light" id ="course">
        <% if @user.courses.present? %>
        <div class="row section-content">
          <% @user.courses.each do |course| %>
          <div class="col-6 col-md-3 px-1 section-card-wrapper">
            <div class="card p-1">
              <%= image_tag course.course_images[0], size:"200x120", class:"card-img-top border-bottom" %>
              <div class="card-bogy mb-1">
                <h5 class="card-title mt-1 text-center"><%= course.title %></h5>
                <p class="card-subtitle text-center"><%= course.address%><br/>
                (<%= course.distance%>Km)</p>
                <div class="d-flex flex-column justify-content-between">
                  <div class="col-10 mx-auto text-center mt-1 pt-2 border-top" id="favorite_<%= course.id %>">
                    <%= render 'public/favorites/button', course:course %>
                  </div>
                  <div class="col-9 mx-auto text-center mt-2 mb-1" id="finish_<%= course.id %>">
                    <%= render 'public/finishes/button', course:course %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% end %>
        <% else %>
          <div>
            <h5 class="pl-3 pt-3 text-muted">投稿はありません。</h5>
          </div>
        <% end %>
      </section>
      <section class="content bg-light" id ="followed">
        <%= render 'public/users/followed_card', user: @user%>
      </section>
      <section class="content bg-light" id ="follower">
        <%= render 'public/users/follower_card', user: @user %>
      </section>
    </div>
  </div>
</div>
<%= javascript_pack_tag 'public/profile' %>
