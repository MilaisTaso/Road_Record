<div class="row">
  <div class="col-11">
    <h2>コース一覧</h2>
    <table class="table table-hover mt-4 table-striped bg-white border">
      <thead>
        <tr>
          <th class="text-center align-middle">ID</th>
          <th class="text-center align-middle">コース画像</th>
          <th class="text-center align-middle">コース名</th>
          <th class="text-center align-middle">ユーザー</th>
        </tr>
      </thead>
      <tbody>
        <% @courses.each do |course| %>
        <tr>
          <td class="text-center align-middle"><%= course.id %></td>
          <td class="py-1 text-center align-middle"><%= image_tag course.course_images[0].variant(
          gravity: "Center", resize: "50x50!", crop: "50x50+0+0").processed %></td>
          <td class="text-center align-middle">
            <%= link_to admin_course_path(course) do %>
            <%= course.title %>
            <% end %>
          </td>
          <td class="text-center align-middle">
            <%= link_to admin_user_path(course.user) do %>
              <%= course.user.name %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-center mx-auto mt-5">
      <%= paginate @courses, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>
</div>
